<NewMapScene>
	
	<Controller>
		
		<Command 	type 	 = "change"
							source = "Editor"
							target = "EditorScene"/>
		
		<Command 	type 	 = "switch"
							source = "NewMapBack"
							target = "MainMenuScene"/>
		
	</Controller>
	
	<Panel visible = "false"
				 name		 = "New Map">
		
		<Texture  type				= "TEXTURE_2D"
							path        = "GUIElements.png" 
							mode        = "MODULATE"
							mipmap      = "true">
			
			<Wrap   s           = "REPEAT"
							t           = "REPEAT" />
			
			<Filter mag         = "LINEAR" 
							min         = "LINEAR_MIPMAP_LINEAR" />
			
		</Texture>
		
		<Font path = "ArialSmall.tga" />
		
		<Panel	name						= "NewMapViewer"
						layout 					= "CEN_YAXIS" 
						drawBounds 			= "true" 
						clipSize 				= "0"
						drawBackground 	= "true">
			
			<BordersColor x = "0.2" y = "0.2" z = "0.2" />
			<BGColor      x =  "50" y =  "50" z = "50" />
			
			<Label name = "PreviewMapName">    
				<Text string = "MP_4_3" />
			</Label>
			
			<Panel 	name 						= "MapPreviewPanel"
							layout					= "XAXIS"
							drawBackground 	= "false">
				
				<Interval x = "5" />
				
				<Button callbackString = "PreviewLeft" minAlpha = "0.4" clipSize = "0">
					<Color 				x = "0" 	y = "0.4" 	z = "0" />
					<BordersColor x = "0" 	y = "1" 		z = "0" />
					<Dimensions 	x = "25" y = "25" 						/>
					<Text string = "<" />
				</Button>
				
				<Button drawBounds = "false" callbackString = "PreviewSurface" active = "false" clipSize = "0" minAlpha = "1">
					<Texture  type				= "TEXTURE_2D"
										path        = "mp_4_3.tga" 
										mode        = "MODULATE"
										mipmap      = "true">
						<Wrap   s           = "REPEAT"
										t           = "REPEAT" />
						<Filter mag         = "LINEAR" 
										min         = "LINEAR_MIPMAP_LINEAR" />
					</Texture>
					<Color 				x = "1" 	y = "1" 	z = "1" />
					<Dimensions 	x = "180" y = "112"   			/>
				</Button>
				
				<Button callbackString = "PreviewRight" minAlpha = "0.4" clipSize = "0">
					<Color 				x = "0" 	y = "0.4" 	z = "0" />
					<BordersColor x = "0" 	y = "1" 		z = "0" />
					<Dimensions 	x = "25" y = "25" 						/>
					<Text string = ">" />
				</Button>
				
			</Panel>
			
			<Separator ratio = "1.0" />
			
			<Panel name				= "NewMapOptionsPanel"
						 layout			= "XAXIS"
						 drawBounds	= "false">
				
				<Interval x = "10" y = "10" />
				
				<Button callbackString = "NewMapBack" minAlpha = "0.4">
					<Color 				x = "0" 	y = "0.4" 	z = "0" />
					<BordersColor x = "0" 	y = "1" 		z = "0" />
					<Dimensions 	x = "100" y = "24" 						/>
					<Text string = "Back" />
				</Button>
				
				<Button callbackString = "Editor" minAlpha = "0.4">
					<Color 				x = "0" 	y = "0.4" 	z = "0" />
					<BordersColor x = "0" 	y = "1" 		z = "0" />
					<Dimensions 	x = "100" y = "24" 						/>
					<Text string = "Enter" />
				</Button>
				
			</Panel>
			
		</Panel>
		
		<TexCoordsDesc xStart = "201" yStart = "2" xEnd = "233" yEnd = "34" type = "SLIDER"/>
		<TexCoordsDesc xStart = "167" yStart = "2" xEnd = "199" yEnd = "34" type = "CHECK_BOX"/>
		<TexCoordsDesc xStart = "131" yStart = "1" xEnd = "165" yEnd = "35" type = "CHECK_BOX_MARK"/>
		<TexCoordsDesc xStart =   "1" yStart = "1" xEnd =  "65" yEnd = "66" type = "RADIO_BUTTON"/>
		<TexCoordsDesc xStart =  "66" yStart = "2" xEnd = "130" yEnd = "66" type = "CHECK_RB_MARK"/>
		
	</Panel>
	
</NewMapScene>